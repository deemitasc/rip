<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="customer_account_navigation">
            <block class="Magento\Customer\Block\Account\SortLinkInterface" ifconfig="customer/search_history/enable_search_log_view" name="customer-account-navigation-search-history-link">
                <arguments>
                    <argument name="path" xsi:type="string">search_history/query/history</argument>
                    <argument name="label" xsi:type="string" translate="true">My Search History</argument>
                    <argument name="sortOrder" xsi:type="number">200</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>

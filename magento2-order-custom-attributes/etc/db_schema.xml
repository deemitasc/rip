<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="quote" resource="default">
        <column xsi:type="varchar" name="comments" nullable="true" length="255" comment="Comments"/>
        <column xsi:type="varchar" name="po_number" nullable="true" length="255" comment="Order Purchase Number"/>
        <column xsi:type="varchar" name="ship_entire_only" nullable="true" length="1" comment="Ship Only Complete Order"/>
    </table>
    <table name="sales_order" resource="default">
        <column xsi:type="varchar" name="comments" nullable="true" length="255" comment="Comments"/>
        <column xsi:type="varchar" name="po_number" nullable="true" length="255" comment="Order Purchase Number"/>
        <column xsi:type="varchar" name="ship_entire_only" nullable="true" length="1" comment="Ship Only Complete Order"/>
    </table>
    <table name="sales_order_grid" resource="default">
        <column xsi:type="varchar" name="comments" nullable="true" length="255" comment="Comments"/>
        <column xsi:type="varchar" name="po_number" nullable="true" length="255" comment="Order Purchase Number"/>
        <column xsi:type="varchar" name="ship_entire_only" nullable="true" length="1" comment="Ship Only Complete Order"/>
    </table>
</schema>
